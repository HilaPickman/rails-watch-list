<div class="container">
  <div class="row pt-4">
    <div class="col-sm-6">
      <h2>Add a movie to the list</h2>
      <div class="mt-4 mb-4">
        <%= simple_form_for [@list, @bookmark]  do |f| %>
        <%= f.input :comment %>
        <%= f.association :movie %>
         <%= f.submit 'Add movie', class: "btn btn-primary" %>
        <% end %>
      </div>
      <hr/>

    </div>
  </div>
</div>
